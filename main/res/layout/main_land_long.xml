<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
    
	<include layout="@layout/panelpalette"
		android:id="@+id/panelOps"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_below="@+id/panelCoreFunctions"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:paddingTop="@dimen/activity_vertical_margin" 
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin" />
	
	<LinearLayout 
	    android:id="@id/panelCoreFunctions"
		android:orientation="horizontal"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignLeft="@id/panelOps"
		android:layout_alignParentRight="true"
		android:divider="?android:attr/dividerHorizontal"
		android:showDividers="middle"
		style="?android:attr/buttonBarStyle" >
		
		<include layout="@layout/buttons_edits"/>
		
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/panelNum"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_toLeftOf="@id/panelOps" >
	
		<include layout="@layout/textnum_buttonequal" />

		<android.inputmethodservice.KeyboardView
			android:id="@+id/keyboardNum"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|bottom"
			android:focusable="true"
			android:focusableInTouchMode="true" />
			
	</LinearLayout>
	
	<include layout="@layout/mathview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/panelOps"
		android:layout_above="@id/panelNum" />
	

</RelativeLayout>
