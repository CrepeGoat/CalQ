<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity" >

    <include layout="@layout/textnum_buttonequal"
        android:id="@+id/switchEqText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         />
        
	<include layout="@layout/mathview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/switchEqText"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_toLeftOf="@+id/panel" />
		
	<LinearLayout
	    android:id="@id/panel"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/switchEqText"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
	     >
	    	
		<LinearLayout
			android:id="@+id/panelOps"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
					
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="5dp"
				style="?android:attr/buttonBarStyle"
				android:divider="?android:attr/dividerVertical"
				android:showDividers="middle" >
	
				<include layout="@layout/buttons_edits"/>
	
				<Button
					android:id="@+id/buttonNum"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/number"
					android:textSize="30sp"
					style="?android:attr/buttonBarButtonStyle" />
				
			</LinearLayout>
			
	   		<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="?android:attr/dividerHorizontal" />
			
			<include layout="@layout/panelpalette"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			
		</LinearLayout>
		
		<android.inputmethodservice.KeyboardView
			android:id="@+id/keyboardNum"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|bottom"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:visibility="gone" />
	
	</LinearLayout>
   	
</RelativeLayout>