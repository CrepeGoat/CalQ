<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

	<WebView android:id="@+id/webview"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:layout_alignParentTop="true"
	     android:layout_above="@+id/buttonPanel" />
    
    <LinearLayout
        android:id="@+id/buttonPanel"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
    	android:layout_alignParentBottom="true"
    	android:orientation="vertical" >
    
	    
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
			
			<Button
			    android:id="@+id/buttonDel"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:text="@string/delete"
			    android:textColor="@color/red"
			    android:onClick="onClickDelete" />		
			<ViewSwitcher
			    android:id="@+id/switchEqRes"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" >
	
				<Button
				    android:id="@+id/buttonEq"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:text="@string/equal"
				    android:onClick="onClickEquals" />
	
				<TextView 
				    android:id="@+id/textRes"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:textSize="30sp"
				    android:textStyle="bold"
				    android:textColor="@color/orange"
				    android:maxLines="1"
				    android:gravity="right"
				    android:clickable="true"
				    android:onClick="onClickResult" />
			</ViewSwitcher>
		</LinearLayout>
	    
	    <TableLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.5"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="@dimen/activity_vertical_margin" >
	        
	        <TableRow>
	            <Button
	                android:id="@+id/buttonSum"
	                android:text="@string/sum"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonProd"
	                android:text="@string/product"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonPow"
	                android:text="@string/power"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonNum"
	                android:text="@string/number"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickNumber" />
	        </TableRow>
	        
	        <TableRow>
	            <Button
	                android:id="@+id/buttonDiff"
	                android:text="@string/difference"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonQuot"
	                android:text="@string/quotient"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonSqr"
	                android:text="@string/square"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	            <Button
	                android:id="@+id/buttonSqrt"
	                android:text="@string/squareroot"
	                android:layout_width="0dp"
	                android:layout_weight="1"
	                android:onClick="onClickOperator" />
	        </TableRow>
	        
	        <Button
	            android:id="@+id/buttonEx"
	            android:text="@string/example"
	            android:layout_width="match_parent"
	            android:textColor="@color/orange"
	            android:visibility="invisible" />	        
	    </TableLayout>
	</LinearLayout>
	
	<TextView
	    android:id="@+id/textNum"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/keyboardNum"
	    android:layout_below="@+id/webview"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:hint="@string/numkeyboard_hint"
	    android:textSize="40sp"
	    android:textColor="@color/light_blue"
	    android:background="@color/black"
	    android:maxLines="1"
	    android:gravity="right"
	    android:visibility="gone" />
    
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
    	android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone" />
   	
</RelativeLayout>