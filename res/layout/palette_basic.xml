<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/palette_basic"
    android:tag="@string/tag_plt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:shrinkColumns="*"
	android:stretchColumns="*"
	style="?android:attr/buttonBarStyle"
    >
    
	<TableRow>
		<Button
			android:id="@+id/buttonSum"
			android:tag="@string/tag_op"
			android:text="@string/sum"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonDiff"
			android:tag="@string/tag_op"
			android:text="@string/difference"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonProd"
			android:tag="@string/tag_op"
			android:text="@string/product"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonQuot"
			android:tag="@string/tag_op"
			android:text="@string/quotient"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
	</TableRow>
	
	<TableRow>
		<Button
			android:id="@+id/buttonPow"
			android:tag="@string/tag_op"
			android:text="@string/power"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonSqr"
			android:tag="@string/tag_op"
			android:text="@string/square"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonSqrt"
			android:tag="@string/tag_op"
			android:text="@string/squareroot"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
		<Button
			android:id="@+id/buttonAbs"
			android:tag="@string/tag_op"
			android:text="@string/absolute"
			android:textSize="40sp"
			style="?android:attr/buttonBarButtonStyle"
			 />
					
	</TableRow>
</TableLayout>
