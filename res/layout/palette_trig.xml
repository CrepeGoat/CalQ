<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/palette_trig"
    android:tag="@string/tag_plt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="@string/stretchPaletteCols"
     >
    
	<TableRow>
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonSin"
			android:tag="@string/tag_op"
			android:text="@string/sine"
			android:textSize="@dimen/button_textSize_M"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonCos"
			android:tag="@string/tag_op"
			android:text="@string/cosine"
			android:textSize="@dimen/button_textSize_M"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonTan"
			android:tag="@string/tag_op"
			android:text="@string/tangent"
			android:textSize="@dimen/button_textSize_M"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonPi"
			android:tag="@string/tag_op"
			android:text="@string/const_pi"
			android:textSize="@dimen/button_textSize_L"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
	</TableRow>
	
	<TableRow>
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonAsin"
			android:tag="@string/tag_op"
			android:text="@string/arcsine"
			android:textSize="@dimen/button_textSize_S"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonAcos"
			android:tag="@string/tag_op"
			android:text="@string/arccosine"
			android:textSize="@dimen/button_textSize_S"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
		<awqatty.b.OpButtons.OperationButton
			android:id="@+id/buttonAtan"
			android:tag="@string/tag_op"
			android:text="@string/arctangent"
			android:textSize="@dimen/button_textSize_S"
			style="?android:attr/borderlessButtonStyle"
			android:onClick="onClickOperator"
			 />
			
	</TableRow>
</TableLayout>
