<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<WebView android:id="@+id/webview"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" />
    
	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="false" >
		
	    <LinearLayout
	        android:id="@+id/numPanel"
	        android:orientation="vertical"
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	    
			<TextView
			    android:id="@+id/textNum"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:hint="@string/numkeyboard_hint"
			    android:textSize="40sp"
			    android:textColor="@color/light_blue"
			    android:background="@color/black"
			    android:maxLines="1"
			    android:gravity="right" />
	
		    <android.inputmethodservice.KeyboardView
		        android:id="@+id/keyboardNum"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal|bottom"
		        android:focusable="true"
		        android:focusableInTouchMode="true" />
				
	    </LinearLayout>
	    
		<TableLayout
	        android:id="@+id/opPanel"
	    	android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	        android:layout_gravity="center_horizontal"
			android:paddingTop="@dimen/activity_vertical_margin" 
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
		    android:stretchColumns="*"
		     >
		    
	        <TableRow
	            android:paddingBottom="@dimen/activity_vertical_margin" >
	            
				<ImageButton
				    android:id="@+id/buttonDel"
				    android:src="@drawable/ic_action_remove"
				    android:contentDescription="@string/deleteDesc"
				    android:tint="@color/black" />		
	
				<ViewSwitcher
				    android:id="@+id/switchEqRes"
				    android:layout_span="3" >
		
					<Button
					    android:id="@+id/buttonEq"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:text="@string/equal"
						android:textStyle="bold"
					    android:onClick="onClickEquals" />
		
					<TextView 
					    android:id="@+id/textRes"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:textSize="30sp"
					    android:textStyle="bold"
					    android:textColor="@color/mid_blue"
					    android:maxLines="1"
					    android:gravity="right"
					    android:clickable="true"
					    android:onClick="onClickResult" />
				</ViewSwitcher>
	        </TableRow>
			        	        
	        <TableRow>
	            <Button
	                android:id="@+id/buttonSum"
	                android:text="@string/sum"
					/>
	            <Button
	                android:id="@+id/buttonDiff"
	                android:text="@string/difference"
					/>
	   	        <Button
	                android:id="@+id/buttonProd"
	                android:text="@string/product"
					/>
	            <Button
	                android:id="@+id/buttonQuot"
	                android:text="@string/quotient"
					/>
	        </TableRow>
	        
	        <TableRow>
	            <Button
	                android:id="@+id/buttonPow"
	                android:text="@string/power"
					/>
	            <Button
	                android:id="@+id/buttonSqr"
	                android:text="@string/square"
					/>
	            <Button
	                android:id="@+id/buttonSqrt"
	                android:text="@string/squareroot"
					/>
	            
	        </TableRow>
	        
	    </TableLayout>
	</LinearLayout>
</LinearLayout>
